APP_KEY=
APP_URL=http://localhost:8000
APP_DEBUG=false

# Database
DB_CONNECTION=mysql
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=zero
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_general_ci
POSTGRES_CHARSET=UTF8

# Mail
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="Zero Framework"
MAIL_TIMEOUT=30
MAIL_HELO_DOMAIN=localhost
MAIL_ALLOW_SELF_SIGNED=false
MAIL_VERIFY_PEER=true

# Auth
AUTH_TOKEN_TTL=604800

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_COOKIE=zero_session
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# Storage
STORAGE_DISK=local
STORAGE_LOCAL_ROOT=
STORAGE_PUBLIC_ROOT=

# Logging
LOG_DRIVER=file
LOG_TABLE=logs

# Rate Limiting (Global)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_SECONDS=60
RATE_LIMIT_KEY_STRATEGY=ip
